<UserControl x:Class="revit_mcp_plugin.UI.CommandSetSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:revit_mcp_plugin.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="命令集设置" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="选择要启用的命令集，这些命令将作为扩展功能注册到软件中" 
                       Foreground="#666666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 命令集列表 -->
        <ListView Grid.Row="1" x:Name="CommandSetsListView" Margin="0,5" BorderThickness="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="启用" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                                          HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="名称" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="描述" Width="320" DisplayMemberBinding="{Binding Description}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="刷新" Width="80" Height="30" Margin="0,0,10,0" Click="RefreshButton_Click"/>
            <Button Content="应用" Width="80" Height="30" Background="#0078D7" Foreground="White" 
                    Click="ApplyButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
